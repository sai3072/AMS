        <list_link>false</list_link>
        <list_save_with_form_button>false</list_save_with_form_button>
        <name>Submit</name>
        <onclick>showFields()</onclick>
        <order>300</order>
        <script><![CDATA[if(current.u_case_id!=''){
	var addReply= new AMSCaseFetch();
	var response=addReply.addCommunicationToCase(current.u_case_id.toString(),current.u_case_cc_emails.toString(),current.u_case_reply.toString());
	if(response){
		addReply.getCommunicationsAndInsert(current.u_case_id.toString());
		//call getDescribeCasesAndInsert api only when case is resolved to get status
		if(current.u_case_state=='resolved'){
			addReply.getDescribeCasesAndInsert('','',[current.u_case_id.toString()],'','','');
		}
		gs.addInfoMessage("Reply is Submitted");
	}
	current.u_case_reply_check=false;
	current.u_case_reply='';
	current.update();
	action.setRedirectURL(current);
}
else
	{
	gs.addErrorMessage('No CaseId found');
	action.setRedirectURL(current);
}]]></script>
